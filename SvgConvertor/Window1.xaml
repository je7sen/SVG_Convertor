<Window
	x:Class="SvgConvertor.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="SvgConvertor" Height="600" Width="600">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="36" />
			<RowDefinition Height="*" />
			<RowDefinition Height="24" />		
		</Grid.RowDefinitions>
		
		<WrapPanel Grid.Row="0">
			<ToolBar Height="36" Width="325">
				<Button Name="button1" Click="button1_Click">
					<Image Height="24" Width="24" Source="res\document_open.png" ToolTip="Open" />
				</Button>
                <Button Name="button2" Click="button2_Click">
                <Image Height="24" Width="24" Source="res\com.png" ToolTip="ComPort" />
                </Button>
                <Button Name="button3" Click="button3_Click">
					<Image Height="24" Width="24" Source="res\plot.png" ToolTip="Plot" />
				</Button>
                <Button Name="button4" Click="button4_Click">
                    <Image Height="24" Width="24" Source="res\connect.png" ToolTip="Connect" />
                </Button>
                <Button Name="button5" Click="button5_Click">
                    <Image Height="24" Width="24" Source="res\disconnect.png" ToolTip="Disconnect"  />
                </Button>
                <Button Name="button6" Click="button6_Click">
                    <Image Height="24" Width="24" Source="res\Button-Up.png" ToolTip="X_Up" />
                </Button>
                <Button Name="button7" Click="button7_Click">
                    <Image Height="24" Width="24" Source="res\Button-Down-icon.png" ToolTip="X_Down" />
                </Button>
                <Button Name="button8" Click="button8_Click">
                    <Image Height="24" Width="24" Source="res\Button-Next-icon.png" ToolTip="Y_Left" />
                </Button>
                <Button Name="button9" Click="button9_Click">
                    <Image Height="24" Width="24" Source="res\Button-Right-icon.png" ToolTip="Y_Right" />
                </Button>
                <Button Name="button10" Click="button10_Click">
                    <Image Height="24" Width="24" Source="res\Set.png" ToolTip="SetToZero" />
                </Button>
            </ToolBar>
            <TextBlock Text="COM:" />
            <ComboBox x:Name="Combobox1" />
        </WrapPanel>
		
		<!-- Svg drawing area -->
		<DockPanel Grid.Row="1" LastChildFill="true">
			<Image x:Name="ImageControl" />
        </DockPanel>
		
		<StatusBar Grid.Row="2">
			<StatusBarItem>
				<TextBlock x:Name="TextBlock1" Text="Ready" />
			</StatusBarItem>
		</StatusBar>
	</Grid>
</Window>