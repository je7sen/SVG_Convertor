<Window
	x:Class="SvgConvertor.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="SvgConvertor" Height="600" Width="600">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="36" />
			<RowDefinition Height="*" />
			<RowDefinition Height="24" />		
		</Grid.RowDefinitions>
		
		<WrapPanel Grid.Row="0">
			<ToolBar>
				<Button Name="button1" Click="button1_Click">
					<Image Height="24" Width="24" Source="res\document_open.png" ToolTip="Open" />
				</Button>
				<Button Name="button2" Click="button2_Click">
					<Image Height="24" Width="24" Source="res\pencil.png" ToolTip="Draw" />
				</Button>
			</ToolBar>
		</WrapPanel>
		
		<!-- Svg drawing area -->
		<DockPanel Grid.Row="1" LastChildFill="true">
			<Image x:Name="ImageControl" />
		</DockPanel>
		
		<StatusBar Grid.Row="2">
			<StatusBarItem>
				<TextBlock x:Name="TextBlock1" Text="Ready" />
			</StatusBarItem>
		</StatusBar>
	</Grid>
</Window>